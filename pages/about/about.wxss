.about {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  position: relative;
  box-sizing: border-box;
  padding-bottom: calc(1.4rem + 72rpx);
  flex-wrap: nowrap;
}

.appIcon {
  display: block;
  width: 320rpx;
  height: 320rpx;
  margin: 48rpx;
  border-radius: 50%;
}

.appName {
  font-size: 64rpx;
}

.appAuthor {
  color: #aaaaaa;
}

.appDesc {
  margin: 48rpx;
  text-align: center;
}

.appPrint,
.appVer {
  font-size: 0.8rem;
  line-height: 1;
  position: absolute;
  color: #aaaaaa;
}

.appPrint {
  bottom: calc(0.6rem + 48rpx);
}

.appVer {
  bottom: 24rpx;
}